<h1>This is the list of completed workouts.</h1>
<form method="post">
  <input type="text" name="name" id="toDoName">Task <br>
  <input type="submit" name="Add Item" value="Add Item">
</form>

{{#if toDo}}
<ul>
  {{#each toDo}}
  <li>
    <h3>Task: {{this.name}}</h3>
    <h3>City: {{this.city}}</h3>
    <form method="post">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" name="Done" value="Mark as Done">
    </form>
  </li>
  {{/each}}
</ul>
{{/if}}
