<h1>Workout Tracker</h1>
<form>
		<fieldset>
			<legend>What workouts have you completed?</legend>
			<!--Name-->
			<input type="text" name="name" id="name">
			<label for = "name">Exercise Name</label>
			</br>
			<!--Reps-->
			<input type="text" name="reps" id="reps">
			<label for = "reps">Reps</label>
			</br>
			<!--Weight-->
			<input type="text" name="weight" id="weight">
			<label for = "weight">Weight</label>
			</br>
			<!--Date-->
			<input type="text" name="date" id="date" placeholder="YYYY/MM/DD">
			<label for = "date">Date</label>
			</br>
			<!--lbs (units)-->
			<input type="radio" name="units" value= 1 >lbs<br>
			<input type="radio" name="units" value= 0 >kilos<br>
		
			
			<!--Submit button-->	
			<!-- <input type="submit" id="insertSubmit"> -->
			<button id="insertSubmit" type="submit">Add Exercise</button>
		</fieldset>
			
</form>
